<html>
    <head>
        <meta charset="UTF-8">
        <title>Практика</title>
    </head>
    <body>
        <?php
            $num = 6;
            $flag = false;
            for ($i = 2; $i <= ($num / 2); $i++) {
                if ($num % $i === 0) {
                    $flag = true;
                    break;
                }
            }
            if ($flag) {
                echo 'Составное';
            }
            else {
                echo 'Простое';
            }
        ?>
    </body>
</html>

