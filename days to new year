    <body>
        <?php
            $timestampToNewYear = mktime(23, 59, 59, 12, 31);
            $secondsToNewYear = $timestampToNewYear - time();
            $daysToNewYear = $secondsToNewYear / (60 * 60 * 24);
            echo 'До Нового Года осталось ' . ceil( $daysToNewYear) . ' дней.';
        ?>
    </body>
